<h2>Welcome to Schedule Planner app landing page.</h2>
<hr/>
<% if current_user and current_user.business.present? %>
  <%= link_to 'Business Console',
    business_slug_path(current_user.business),
    class: 'btn btn-success btn-lg' %>
<% elsif not current_user %>
  Please <%= link_to 'Log In', new_user_session_path %> or
  <%= link_to 'Sign Up', new_user_registration_path %> first.
<% end %>


<% if current_user and current_user.roles? :super_admin %>
  <%= link_to 'Super Console',
    manage_dashboard_path(current_user.business),
    class: 'btn btn-success btn-lg' %>
<% end %>