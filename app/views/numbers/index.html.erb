<h1>Inbound Numbers for
  <%= @business.display_name %></h1>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Number</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @numbers.empty? %>
      <tr>
        <td colspan="100" class='muted'>
          There are currently no Inbound Numbers associated with your Business.
        </td>
      </tr>
    <% end %>
    <% @numbers.each do |number| %>
      <tr>
        <td><%= number.number %></td>
        <td><%= number.office %></td>
        <td><%= link_to 'Show', number %></td>
        <td><%= link_to 'Edit', edit_number_path(number) %></td>
        <td><%= link_to 'Destroy', number, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<hr/>
<% if can? :create, Number %>
  <%= link_to 'New Number', new_business_number_path(@business), class: 'btn btn-success' %>
<% end %>
